<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MinhasComprasMaui.Views.NovoProduto"
             Title="NovoProduto">


    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked_1"/>

    </ContentPage.ToolbarItems>
       
    <VerticalStackLayout Spacing="10" Padding="10">
        <Label 
           Text="Descrição do Produto" />
        <Entry x:Name="txt_descricao"/>

        <Label Text="Quantidade"/>
        <Entry x:Name="txt_qntdd" Keyboard="Numeric"/>

        <Label Text="Preço unitário"/>
        <Entry x:Name="txt_preco" Keyboard="Numeric"/>

        <Label Text="Preço (R$)" FontSize="Medium" />
        <Entry Placeholder="Preço" Text="{Binding Preco}" Keyboard="Numeric" />

        <Label Text="Data de Compra" FontSize="Medium" Margin="0, 10, 0, 0" />
        <DatePicker 
            x:Name="dp_dataCompra"
            Date="{Binding DataCadastro}" 
             Format="D" />
        <Button Text="Salvar" Clicked="Button_Clicked" Margin="0, 20, 0, 0" />

    </VerticalStackLayout>
</ContentPage>